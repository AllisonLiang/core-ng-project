{
  "index_patterns": "stat-*",
  "order": 1,
  "settings": {
    "number_of_shards": "${NUMBER_OF_SHARDS}",
    "refresh_interval": "${REFRESH_INTERVAL}"
  },
  "mappings": {
    "dynamic_templates": [
      {
        "stats": {
          "path_match": "stats.*",
          "mapping": {
            "type": "scaled_float",
            "scaling_factor": 1000
          }
        }
      }
    ],
    "properties": {
      "@timestamp": {
        "type": "date",
        "format": "strict_date_optional_time"
      },
      "app": {
        "type": "keyword"
      },
      "server_ip": {
        "type": "ip"
      }
    }
  }
}
